{
  "version": "4.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "generate": "buf generate buf.build/operand/engine",
    "start": "tsdx watch",
    "build": "tsdx build --target node --tsconfig ./tsconfig.json",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@operandinc/sdk",
  "author": "Operand, Inc.",
  "module": "dist/typescript-sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/typescript-sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/typescript-sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@bufbuild/protoc-gen-connect-web": "^0.2.1",
    "@bufbuild/protoc-gen-es": "^0.1.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "@bufbuild/connect-web": "^0.2.1",
    "@bufbuild/protobuf": "^0.1.1"
  }
}
